<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

    <RelativeLayout
        android:id="@+id/layout_parrent"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="1dp"
        android:background="@color/gray">

        <ImageView
            android:id="@+id/img_large"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>


        <FrameLayout
            android:id="@+id/layout_footer_parent"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:background="@color/blue"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_itemlogo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:visibility="gone"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_itemname"
                    android:textSize="@dimen/txt_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="item name"/>
                <TextView
                    android:id="@+id/txt_itedetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_medium"
                    android:text="item detail"/>

            </LinearLayout>





        </FrameLayout>


        <ImageView
            android:id="@+id/img_shopping_bag"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:visibility="visible"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:foregroundGravity="right"
            android:background="@drawable/bag"/>


    </RelativeLayout>
</RelativeLayout>