<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_griditems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/img_item_log_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/armani"/>

            <TextView
                android:id="@+id/txt_item_name_one"
                android:layout_below="@id/img_item_log_one"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="Armani"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/img_item_logo_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/gucci"/>

            <TextView
                android:id="@+id/txt_item_name_two"
                android:layout_below="@id/img_item_logo_two"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="Gucci"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/img_item_logo_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/lg"/>

            <TextView
                android:id="@+id/txt_item_name_three"
                android:layout_below="@id/img_item_logo_three"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="LG"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>